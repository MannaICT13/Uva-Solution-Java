import java.text.DecimalFormat;
import java.util.Scanner;

 class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc=new  Scanner(System.in);
		
		int t=sc.nextInt();
		
		while(t-->0)
		{
			int count=1;
			int result=0;
			String str=sc.next();
			
			int len=str.length();
			
			for(int i=0;i<len;i++)
			{
				
				if(str.charAt(i)=='X')
				{
				
					count=1;
					
				}
				
				else 
				{
					result+=count;
				count++;
				}
			}
			System.out.println(result);
			
			
		}
		
		
		
		
    }

}
	
